{
    "compilerOptions": {
        "incremental": true,
        "target": "es2022",
        "module": "es2022",
        "lib": ["dom", "es2022"],
        "rootDir": "./src",
        "strict": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "out/",
        "types": ["node"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
